{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "noEmit": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false
  },
  "include": ["src/worker/**/*", "src/lib/**/*", "src/types/**/*"],
  "exclude": ["node_modules", "dist", "src/app/**/*", "src/components/**/*", "src/__tests__/**/*"]
}
